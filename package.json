{
  "name": "devflow",
  "version": "1.0.0",
  "description": "AI-guided DevOps workflow assistant built on Claude Code's extensibility framework",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "node --loader ts-node/esm src/index.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "precommit": "npm run lint && npm run typecheck && npm run test"
  },
  "keywords": [
    "devops",
    "workflow",
    "automation",
    "claude-code",
    "ai-assisted",
    "developer-tools",
    "ci-cd"
  ],
  "author": "DevFlow Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "handlebars": "^4.7.8",
    "yaml": "^2.3.4",
    "fs-extra": "^11.2.0",
    "fast-glob": "^3.3.2",
    "semver": "^7.5.4",
    "ora": "^8.0.1",
    "boxen": "^7.1.1",
    "cli-table3": "^0.6.3",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "winston": "^3.11.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^8.0.1",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.5.6",
    "@types/figlet": "^1.5.8",
    "@types/lodash": "^4.14.202",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.2",
    "@jest/globals": "^29.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slamb2k/DevFlow.git"
  },
  "bugs": {
    "url": "https://github.com/slamb2k/DevFlow/issues"
  },
  "homepage": "https://github.com/slamb2k/DevFlow#readme"
}