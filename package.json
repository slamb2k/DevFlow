{
  "name": "devflow",
  "version": "1.0.0",
  "description": "AI-guided DevOps workflow assistant built on Claude Code's extensibility framework",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "node --loader ts-node/esm src/index.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "precommit": "npm run lint && npm run typecheck && npm run test",
    "ci:validate": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build",
    "ci:local": "npm run ci:validate",
    "prepublishOnly": "npm run ci:validate",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "devops",
    "workflow",
    "automation",
    "claude-code",
    "ai-assisted",
    "developer-tools",
    "ci-cd"
  ],
  "author": "DevFlow Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^14.0.1",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^17.2.2",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.2",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "gradient-string": "^3.0.0",
    "handlebars": "^4.7.8",
    "inquirer": "^12.9.6",
    "joi": "^18.0.1",
    "lodash": "^4.17.21",
    "ora": "^8.0.1",
    "p-limit": "^7.1.1",
    "semver": "^7.5.4",
    "supertest": "^7.1.4",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^24.5.0",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.1.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slamb2k/DevFlow.git"
  },
  "bugs": {
    "url": "https://github.com/slamb2k/DevFlow/issues"
  },
  "homepage": "https://github.com/slamb2k/DevFlow#readme"
}
